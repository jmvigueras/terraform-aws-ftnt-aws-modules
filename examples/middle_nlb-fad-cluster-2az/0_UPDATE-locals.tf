#-----------------------------------------------------------------------------------------------------
# FortiADC Terraform deployment
#-----------------------------------------------------------------------------------------------------
locals {
  #-----------------------------------------------------------------------------------------------------
  # General variables
  #-----------------------------------------------------------------------------------------------------
  prefix = "fad-nlb"

  tags = {
    Project = "ftnt_modules_aws"
  }

  region = "eu-west-1"
  azs    = ["eu-west-1a", "eu-west-1b"] //Select AZs to deploy

  admin_cidr = "0.0.0.0/0"

  #-----------------------------------------------------------------------------------------------------
  # FAD variables
  #-----------------------------------------------------------------------------------------------------
  fad_number_peer_az = 1
  fad_license_type   = "payg"
  fad_instance_type  = "m5.large"
  fad_btw            = "1gbps"

  # FAC - VPC
  fad_vpc_cidr             = "10.1.10.0/24"
  fad_public_subnet_names  = ["vm"]
  fad_private_subnet_names = ["tgw", "gwlb", "nlb"]

}
